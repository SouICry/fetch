extends layout

block content
    form(method='POST')
        legend Signup
        .form-group
            label(for='username') First Name
            input.form-control(type='text', name='first_name', autofocus)
        .form-group
            label(for='username') Last Name
            input.form-control(type='text', name='last_name', autofocus)
        .form-group
            label(for='email') Email
            input.form-control(type='text', name='email')
        .form-group
            label(for='password') Password
            input.form-control(type='password', name='password')
        .form-group
            label(for='confirm') Confirm Password
            input.form-control(type='password', name='confirm')
        button.btn.btn-primary(type='submit') Signup